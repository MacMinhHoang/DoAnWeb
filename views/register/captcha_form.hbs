{{#section 'title'}}
  Register Page
{{/section}}

 <!-- Breadcrumbs -->
  
  <div class="breadcrumbs">
    <div class="container">
      <div class="row">
        <div class="col-xs-12">
          <ul>
            <li class="home"> <a title="Go to Home Page" href="/home">Home</a><span>&raquo;</span></li>
            <li><strong>My Account</strong></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <!-- Breadcrumbs End --> 
  
  <!-- Main Container -->
  <section class="main-container col1-layout">
    <div class="main container">
      <div class="page-content">
        <div class="account-login">
            <div class="single-input p-bottom50 clearfix">
              <form action="" method="post">
                <div class="row">
                  <div class="col-xs-12">
                    <div class="check-title">
                      <h4>New Customer</h4>
                    </div>
                  </div>
                  <div class="col-md-6 col-sm-8">
                    <div class="col-xs-12">
                      <label>First Name:</label>
                      <div class="input-text">
                        <input type="text" name="name" class="form-control">
                        <br>
                      </div>
                    </div>
                    <div class="col-xs-12">
                      <label>Last Name:</label>
                      <div class="input-text">
                        <input type="text" name="name" class="form-control">
                        <br>
                      </div>
                    </div>
                    <div class="col-xs-12">
                      <label>Address:</label>
                      <div class="input-text">
                        <input type="text" name="address" class="form-control">
                        <br>
                      </div>
                    </div>
                    <div class="col-xs-12">
                      <label>City/Town:</label>
                      <div class="input-text">
                        <input type="text" name="city" class="form-control">
                        <br>
                      </div>
                    </div>
                    <div class="col-xs-12">
                      <div class="billing-checkbox">
                        <input type="checkbox" value="forever" id="rememberme" name="rememberme">
                        Sign up for our newsletter! </div>
                        <br>
                      <div class="submit-text">
                        <button class="button" type="button" id="btnRegister"><i class="fa fa-user"></i>&nbsp; <span>Register</span></button>
                      </div>
                    </div>
                  </div>
                  <div class="col-md-6 col-sm-8">
                    <div class="col-xs-12">
                      <label>Email:</label>
                      <div class="input-text">
                        <input type="text" name="email" class="form-control">
                        <br>
                      </div>
                    </div>
                    <div class="col-xs-12">
                      <label>Phone:</label>
                      <div class="input-text">
                        <input type="text" name="phone" class="form-control">
                        <br>
                      </div>
                    </div>
                    <div class="col-xs-12">
                      <label for="username">username<span class="required">*</span></label>
                      <div class="input-text">
                        <input type="text" name="username" class="form-control">
                      <br>
                      </div>
                    </div>
                    <div class="col-xs-12">
                      <label for="password_login">Password<span class="required">*</span></label>
                      <div class="input-text">
                        <input type="password" name="password" class="form-control">
                      </div>
                    </div>
                  </div>
                </div>
              </form>
          </div> 
        </div>
      </div>
    </div>
  </section>
  <!-- Main Container End --> 
