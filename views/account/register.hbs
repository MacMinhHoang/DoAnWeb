  <!-- Breadcrumbs End --> 
  
  <!-- Main Container -->
  <section class="main-container col1-layout">
    <div class="main container">
      <div class="page-content">
        <div class="account-login">
            <div class="single-input p-bottom50 clearfix">
              <form action="" method="post">
                <div class="check-title">
                    <h4>New Customer</h4>
                </div>
                <br>
                <div class="row">
                  <div class="col-md-6 col-sm-8">
                    <div class="form-group">
                        <label for="cusName">Full Name<span class="required">*</span></label>
                        <input type="text" name="cusName" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="cusAddress">Address<span class="required">*</span></label>
                        <input type="text" name="cusAddress" class="form-control">
                    </div>
                      {{!-- <div class="billing-checkbox">
                        <input type="checkbox" value="forever" id="rememberme" name="rememberme">
                        Sign up for our newsletter! 
                      </div> --}}
                      <div class="g-recaptcha" data-sitekey="6LcAWlsUAAAAAPt8x-WMQsTjkfAXalEqM9jD4DT8"></div>
                      <br>
                      <div class="submit-text">
                        <button class="button" type="submit" id="btnRegister">
                          <i class="fa fa-user"></i>&nbsp; <span>Register</span>
                        </button>
                      </div>
                  </div>
                  <div class="col-md-6 col-sm-8">
                    <div class="form-group">
                        <label for="cusEmail">Email<span class="required">*</span></label>
                        <input type="email" name="cusEmail" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="cusPhone">Phone<span class="required">*</span></label>
                        <input type="phone" name="cusPhone" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="username">Username<span class="required">*</span></label>
                        <input type="text" name="cusUsername" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="cusPassword">Password<span class="required">*</span></label>
                        <input type="password" name="cusPassword" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="cusRePass">Password<span class="required">*</span></label>
                        <input type="password" name="cusRePass" class="form-control">
                    </div>
                  </div>
                </div>
              </form>
          </div> 
        </div>
      </div>
    </div>
  </section>
  <!-- Main Container End --> 