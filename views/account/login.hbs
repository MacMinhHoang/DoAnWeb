{{#section 'js'}}
    {{#if logging}}

      {{#if showError}}
          <script type="text/javascript">
            swal({
              type: 'error',
              title: 'Login failed',
            });
          </script>
      {{else}}
          <script type="text/javascript">
            swal({
              type: 'success',
              title: 'Login Successfully',
              showConfirmButton: false,
              timer: 1500
            });
          </script>
      {{/if}}
    {{/if}}
{{/section}}

