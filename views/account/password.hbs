{{#section 'title'}}
  Change Password
{{/section}}

{{#section 'css'}}
    
{{/section}}

{{#section 'js'}}
    <script type="text/javascript">
    $(function(){

        $('#cusRePass').change(function(event) {
          var repass = $(this).val(),
              pass = $('#cusNewPass').val();

          if (pass !== repass)
          {
            $('#cusRePass')[0].setCustomValidity('Passwords do not match!');
            $(this).css('border-color', 'red');
            $('#cusNewPass').css('border-color', 'red');
          }
          else
          {
            $('#cusRePass')[0].setCustomValidity("");
            $(this).css('border-color', 'green');
            $('#cusNewPass').css('border-color', 'green');
          }
        });

        $('#cusNewPass').change(function(event) {
          var repass = $('#cusRePass').val(),
              pass = $(this).val();

          if (pass !== repass)
          {
            $('#cusRePass')[0].setCustomValidity('Passwords do not match!');
            $(this).css('border-color', 'red');
            $('#cusRePass').css('border-color', 'red');
          }
          else
          {
            $('#cusRePass')[0].setCustomValidity("");
            $(this).css('border-color', 'green');
            $('#cusRePass').css('border-color', 'green');
          }
        });

        $('#cusOldPass').change(function(event) {
            $(this).css('border-color', '');
        });   
            
    });
    </script>

    {{#if isError}}
        <script type="text/javascript">
          swal({
            type: 'error',
            title: 'Oops...',
            text: 'Password Incorrect!'
          });
          $('#cusOldPass').css('border-color', 'red');
        </script>
    {{else if isChecked}}
        <script type="text/javascript">
          swal({
            type: 'success',
            title: 'Change Password Successfully',
            showConfirmButton: false,
            timer: 1500
          }).then((result) => {
              window.location.href = "/account"
          });
        </script>
    {{/if}}

{{/section}}

