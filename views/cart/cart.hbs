{{#section 'title'}}
  Shopping Cart
{{/section}}

 <!-- Main Container -->
  <section class="main-container col1-layout">
    <div class="main container">
      <div class="col-main">
        <div class="cart">
          
          <div class="page-content page-order"><div class="page-title">
            <h2>Shopping Cart</h2>
          </div>
            
            
            <div class="order-detail-content">
              <div class="table-responsive">
                <table class="table table-bordered cart_summary">
                  <thead>
                    <tr>
                      <th class="cart_product">Product</th>
                      <th>Description</th>
                      <th>Avail.</th>
                      <th>Unit price</th>
                      <th>Qty</th>
                      <th>Total</th>
                      <th  class="action"><i class="fa fa-trash-o"></i></th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr id="row-1">
                      <td class="cart_product">
                        <a href="#"><img src="/images/products/Nikon/NIKON_COOLPIX-B700.jpg" alt="Product"></a>
                      </td>
                      <td class="cart_description">
                        <p class="product-name"><a href="/single_product">NIKON COOLPIX B700 </a></p>
                      </td>
                      <td class="availability in-stock"><span class="label">In stock</span></td>
                      <td class="price"><span>8,490,000 VND</span></td>
                      <td class="qty">
                        <input class="form-control input-sm" type="number" id="quantity-1" min="1" max="10" value="1">
                      </td>
                      <td class="price" id="total-1"><span>8,490,000 VND</span></td>
                      <td class="action" id="del-1"><i class="icon-close"></i></td>
                    </tr>
                    <tr id="row-2">
                      <td class="cart_product">
                        <a href="#"><img src="/images/products/Sony/SONY_ALPHA-A6000.jpg" alt="Product"></a>
                      </td>
                      <td class="cart_description">
                        <p class="product-name"><a href="/single_product">SONY ALPHA A6000 </a></p>
                      </td>
                      <td class="availability out-of-stock"><span class="label">No stock</span></td>
                      <td class="price"><span>13,490,000 VND</span></td>
                      <td class="qty">
                        <input class="form-control input-sm" type="number" id="quantity-2" value="0" disabled>
                      </td>
                      <td class="price"><span>0 VND</span></td>
                      <td class="action" id="del-2"><i class="icon-close"></i></td>
                    </tr>
                    <tr id="row-3">
                      <td class="cart_product">
                        <a href="#"><img src="/images/products/Canon/[10].CANON POWERSHOT SX430 IS/10-1.jpg"></a>
                      </td>
                      <td class="cart_description">
                        <p class="product-name"><a href="/single_product">CANON POWERSHOT SX430 IS </a></p>
                      </td>
                      <td class="availability in-stock"><span class="label">In stock</span></td>
                      <td class="price"><span>5,350,000 VND</span></td>
                      <td class="qty">
                        <input class="form-control input-sm" type="number" id="quantity-3" min="1" max="10" value="1">
                      </td>
                      <td class="price" id="total-3"><span>5,350,000 VND</span></td>
                      <td class="action" id="del-3"><i class="icon-close"></i></td>
                    </tr>
                  </tbody>
                  <tfoot>
                    <tr>
                      <td colspan="2" rowspan="2"></td>
                      <td colspan="3">Total products (tax incl.)</td>
                      <td colspan="2" id="total-4">13,840,000 VND </td>
                    </tr>
                    <tr>
                      <td colspan="3"><strong>Total</strong></td>
                      <td colspan="2" id="total-5"><strong>13,840,000 VND </strong></td>
                    </tr>
                  </tfoot>
                </table>
              </div>
              <div class="cart_navigation"> 
                <a class="continue-btn" href="/home"><i class="fa fa-arrow-left"> </i>&nbsp; Continue shopping</a> 
                <a class="checkout-btn button" id="btnCheckOut" role="button">
                  <i class="fa fa-check"></i> Proceed to checkout
                </a> 
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
