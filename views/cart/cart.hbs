      </div>
    </div>
  </div>

  <script type="text/javascript">

  $(function() {

  var qunt1 = $('#quantity-1').val();
  var qunt2 = $("#quantity-2").val();
  var qunt3 = $('#quantity-3').val();
  var deleted1 = false;
  var deleted2 = false;
  var deleted3 = false;

  function addCommas(x) {
    var parts = x.toString().split(".");
    parts[0] = parts[0].replace(/\B(?=(\d{3})+(?!\d))/g, ",");
    return parts.join(".");
  }

  function updatePrices(num1, num3){
    var price1 = num1 * 8490;
    var price3 = num3 * 5350;
    $('#total-1').empty();
    $('#total-1').append('<span>' + addCommas(price1) + ',000 VND</span>');
    $('#total-3').empty();
    $('#total-3').append('<span>' + addCommas(price3) + ',000 VND</span>');
    $('#total-4').empty();
    $('#total-4').append('<span>' + addCommas(price1 + price3) + ',000 VND</span>');
    $('#total-5').empty();
    $('#total-5').append('<span><strong>' + addCommas(price1 + price3) + ',000 VND</strong></span>');
  }

  $('#quantity-1').on('input', function(event) {
    qunt1 = $('#quantity-1').val();
    if (qunt1 > 10)
      qunt1 = 10;
    if (qunt1 < 1)
      qunt1 = 1;
    $('#quantity-1').val(qunt1);
    updatePrices(qunt1, qunt3);
  });

  $('#quantity-3').on('input', function(event) {
    qunt3 = $('#quantity-3').val();
    if (qunt3 > 10)
      qunt3 = 10;
    if (qunt3 < 1)
      qunt3 = 1;
    $('#quantity-1').val(qunt3);
    updatePrices(qunt1, qunt3);
  });

  $('#del-1').click(function(event) {
    $('#row-1').remove();
    qunt1 = 0;
    deleted1 = true;
    updatePrices(qunt1, qunt3);
  });

  $('#del-2').click(function(event) {
    $('#row-2').remove();
    deleted2 = true;
  });

  $('#del-3').click(function(event) {
    $('#row-3').remove();
    qunt3 = 0;
    deleted3 = true;
    updatePrices(qunt1, qunt3);
  });

  $('#btnCheckOut').click(function(event) {
    if ((!deleted1 && qunt1 == 0) || (!deleted2 && qunt2 == 0) || (!deleted3 && qunt3 == 0))
    {
      alert('Giỏ hàng của bạn có sản phẩm không đủ số lượng!');
      return;
    }
    window.location.href = 'checkout.html';
  });

  });

</script> 