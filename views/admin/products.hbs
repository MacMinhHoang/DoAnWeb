{{#section 'title'}}
	Products
{{/section}}

{{#section 'css'}}
  	<link href="vendors/data-tables/css/jquery.dataTables.min.css" type="text/css" rel="stylesheet">
{{/section}}

{{#section 'js'}}
	<script type="text/javascript" src="vendors/data-tables/js/jquery.dataTables.min.js"></script>
	<script type="text/javascript">  
		$(function() {
		  $('#data-table-simple').DataTable();

		  var table = $('#data-table-row-grouping').DataTable({
		    "columnDefs": [{
		      "visible": false,
		      "targets": 2
		    }],
		    "order": [
		      [2, 'asc']
		    ],
		    "displayLength": 25,
		    "drawCallback": function(settings) {
		      var api = this.api();
		      var rows = api.rows({
		        page: 'current'
		      }).nodes();
		      var last = null;

		      api.column(2, {
		        page: 'current'
		      }).data().each(function(group, i) {
		        if (last !== group) {
		          $(rows).eq(i).before(
		            '<tr class="group"><td colspan="5">' + group + '</td></tr>'
		          );

		          last = group;
		        }
		      });
		    }
		  });

      $('.removeItem').on('click', function() {
        swal({
          title: 'Are you sure?',
          text: "You won't be able to revert this!",
          type: 'warning',
          showCancelButton: true,
          confirmButtonColor: '#3085d6',
          cancelButtonColor: '#d33',
          confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
          if (result.value) {
            swal(
              'Deleted!',
              'Category has been deleted.',
              'success'
            ).then((result) => {
                var id = $(this).data('proid');
                $('#txtProId_R').val(id);
                $('#frmRemoveItem').submit();
              });
          }
        })
      });

		});
	</script>  	
{{/section}}


<div class="card-simple overflow">
    <div id="table-datatables">
      <form style="display:none;" id="frmRemoveItem" method="post" action="/admin/products/remove">
        <input id="txtProId_R" type="text" name="ProId">
      </form>
    	<h4 class="header">Products List</h4>
      <br><br>
      <a class="btn btn-primary" href="products/add">
        <i style="font-size: 30px;" class="mdi mdi-add"></i>
      </a>
      <br><br>
      <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 col-12 p10">
          <table id="data-table-simple" class="responsive-table display centered" cellspacing="0">
            <thead>
              <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Price</th>
                <th>Category</th>
                <th>Supplier</th>
                <th>Views</th>
                <th>Sold</th>
                <th>In Store</th>
                <th>Date</th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tfoot>
              <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Price</th>
                <th>Category</th>
                <th>Supplier</th>
                <th>Views</th>
                <th>Sold</th>
                <th>In Store</th>
                <th>Date</th>
                <th></th>
                <th></th>
              </tr>
            </tfoot>
            <tbody>
              {{#each products}}
                  <tr>
                    <td>{{ID}}</td>
                    <td>{{Ten}}</td>
                    <td>{{GiaBan}}</td>
                    <td>{{Loai}}</td>
                    <td>{{NhaSanXuat}}</td>
                    <td>{{SoLuotXem}}</td>
                    <td>{{SoLuongBan}}</td>
                    <td>{{SoLuongTon}}</td>
                    <td>{{NgayTiepNhan}}</td>
                    <td>
                      <a class="btn" role="button" href="products/edit?id={{ID}}">
                        <i style="font-size: 30px;" class="mdi mdi-edit"></i>
                      </a>
                    </td>
                    <td>
                      <a class="btn removeItem" role="button" href="javascript:;" 
                      data-proid="{{ID}}">
                        <i style="font-size: 30px;" class="mdi mdi-delete"></i>
                      </a>
                    </td>
                  </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
</div>