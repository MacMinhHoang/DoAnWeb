{{#section 'title'}}
	Add New Category
{{/section}}

{{#section 'css'}}
  	
{{/section}}

{{#section 'js'}}
	<script type="text/javascript">
    $(function(){

    	$('#btnAdd').click(function( event ) {
        	event.preventDefault();
        	swal({
        		type: 'success',
            	title: 'Update Successfully',
            	showConfirmButton: false,
            	timer: 1500
        	}).then((result) => {
            	$('#frmAdd').submit();
          	})
    	});

    });
    </script>
{{/section}}

<div class="row">
    <div class="col-sm"></div>
    <div class="col-sm">
      	<div class="card-simple overflow">
			<form id="frmAdd" action="" method="POST" role="form">
			  	<div class="form-group">
			    	<label for="catName">Category Name</label>
			    	<input type="text" class="form-control" name="catName">
			  	</div>
			  	<br>
			  	<div class="form-check">
				  	<input class="form-check-input" type="radio" name="catStatus" value="1" checked>
				  	<label class="form-check-label" for="exampleRadios1">In use</label>
				</div>
				<br>
				<div class="form-check">
				  	<input class="form-check-input" type="radio" name="catStatus" value="0">
				  	<label class="form-check-label" for="exampleRadios2">Not used</label>
				</div>
				<br><br>
			  	<button id="btnAdd" type="submit" class="btn btn-primary">ADD</button>
			</form>
		</div>
    </div>
    <div class="col-sm"></div>
  </div>
</div>

