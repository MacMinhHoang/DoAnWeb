{{#section 'title'}}
	 Categories
{{/section}}

{{#section 'css'}}
  	<link href="vendors/data-tables/css/jquery.dataTables.min.css" type="text/css" rel="stylesheet">
{{/section}}

{{#section 'js'}}
	<script type="text/javascript" src="vendors/data-tables/js/jquery.dataTables.min.js"></script>
	<script type="text/javascript">  
	  $(function() {
	    $('#data-table-simple').DataTable();

	    var table = $('#data-table-row-grouping').DataTable({
	      "columnDefs": [{
	        "visible": false,
	        "targets": 2
	      }],
	      "order": [
	        [2, 'asc']
	      ],
	      "displayLength": 25,
	      "drawCallback": function(settings) {
	        var api = this.api();
	        var rows = api.rows({
	          page: 'current'
	        }).nodes();
	        var last = null;

	        api.column(2, {
	          page: 'current'
	        }).data().each(function(group, i) {
	          if (last !== group) {
	            $(rows).eq(i).before(
	              '<tr class="group"><td colspan="5">' + group + '</td></tr>'
	            );

	            last = group;
	          }
	        });
	      }
	    });

		$('.removeItem').on('click', function() {
		    var id = $(this).data('catid');
		    $('#txtCatId_R').val(id);
		    $('#frmRemoveItem').submit();
		});
	  });
	</script>  	
{{/section}}


<div class="card-simple overflow">
    <div id="table-datatables">
    	<form style="display:none;" id="frmRemoveItem" method="post" action="/admin/categories/remove">
			<input id="txtCatId_R" type="text" name="CatId">
		</form>
    	<h4 class="header">Categories List</h4>
    	<br><br>
		<a class="btn btn-primary" href="categories/add">
			<i style="font-size: 30px;" class="mdi mdi-add"></i>
		</a>
    	<br><br>
        <div class="row">
          <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 col-12 p10">
            <table id="data-table-simple" class="responsive-table display centered" cellspacing="0">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Name</th>
                  <th></th>    
                  <th></th>      
                </tr>
              </thead>
              <tfoot>
                <tr>
                  <th>ID</th>
                  <th>Name</th>
                  <th></th>                  
                  <th></th>      
                </tr>
              </tfoot>
              <tbody>
                {{#each cats}}
	                {{#if TrangThai}}
	                	<tr>
		                    <td>{{ID}}</td>
		                    <td>{{TenLoai}}</td>
		                    <td>
		                  		<a class="btn" role="button" href="categories/edit?id={{ID}}">
		                  			<i style="font-size: 30px;" class="mdi mdi-edit"></i>
		                  		</a>
		                  	</td>
		                    <td>
		                    	<a class="btn removeItem" role="button" href="javascript:;" 
		                    	data-catid="{{ID}}">
		                    		<i style="font-size: 30px;" class="mdi mdi-delete"></i>
		                    	</a>
		                    </td>
	                 	</tr>
	                {{/if}}
                {{/each}}
              </tbody>
            </table>
          </div>
        </div>
    </div>
</div>