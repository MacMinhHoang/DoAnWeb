{{#section 'title'}}
	Add New Product
{{/section}}

{{#section 'css'}}
  	
{{/section}}

{{#section 'js'}}
	<script type="text/javascript">
		$('#btnAdd').click(function( event ) {
        	event.preventDefault();
        	swal({
        		type: 'success',
            	title: 'Update Successfully',
            	showConfirmButton: false,
            	timer: 1500
        	}).then((result) => {
            	$('#frmAdd').submit();
          	})
    	});

		function readURL(input) {
		  if (input.files && input.files[0]) {
		    var reader = new FileReader();
		    reader.onload = function(e) {
		      $('#preview').attr('src', e.target.result);
		    }
		    reader.readAsDataURL(input.files[0]);
		  }
		}

		$("#proImg").change(function() {
		  readURL(this);
		});

	</script>
{{/section}}

<form id="frmAdd" action="" method="POST" role="form">
	<div class="card-simple overflow">
		<div class="row">
		    <div class="col-sm">
			  	<div class="form-group">
			    	<label for="proName">Product Name</label>
			    	<input type="text" class="form-control" name="proName">
			  	</div>
			  	<br>
			 	<div class="form-group">
			    	<label for="proPic">Choose a picture</label>
			    	<input type="file" class="form-control-file" name="proPic" id="proImg" accept="image/*">
			  	</div>
				<br>
				<img src="" id="preview"></img>
				<br>
				<div class="form-group">
			    	<label for="proPrice">Product Price</label>
			    	<input type="number" class="form-control" name="proPrice">
			  	</div>
			  	<br>
			  	<div class="form-group">
			    	<label for="proViews">Views</label>
			    	<input type="number" class="form-control" name="proViews">
			  	</div>
			  	<br>
				<div class="form-group">
			    	<label for="proInStore">In Store</label>
			    	<input type="number" class="form-control" name="proInStore">
			  	</div>
			  	<br>
				<div class="form-group">
			    	<label for="proSold">Sold</label>
			    	<input type="number" class="form-control" name="proSold">
			  	</div>
			  	<br>
		    </div>
		    <div class="col-sm">
				<div class="form-group">
			    	<label for="proDes">Description</label>
			    	<textarea class="form-control" rows="10" name="proDes"></textarea>
			  	</div>
			  	<br>
				<div class="form-group">
			    	<label for="proCat">Category</label>
			    	<select class="form-control" name="proCat" id="selCat">
						{{#each Categories}}
				    		{{#if TrangThai}}
								<option value="{{ID}}">{{TenLoai}}</option>
							{{/if}}
				    	{{/each}}
				  	</select>
			  	</div>
			  	<br>
				<div class="form-group">
			    	<label for="proSup">Supplier</label>
			    	<select class="form-control" name="proSup" id="selSup">
				    	{{#each Suppliers}}
				    		{{#if TrangThai}}
								<option value="{{ID}}">{{TenNSX}}</option>
							{{/if}}
				    	{{/each}}
				  	</select>
			  	</div>
			  	<br>
				<div class="form-group">
			    	<label for="proDate">Date</label>
			    	<input type="date" class="form-control" name="proDate">
			  	</div>
			  	
		    </div>  
		</div>

		<div class="col-md-4 text-center">
		    <button id="btnAdd" type="submit" class="btn btn-primary">ADD</button>
		</div>
	</div>
</form>